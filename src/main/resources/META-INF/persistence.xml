<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="ejemploJPA" transaction-type="RESOURCE_LOCAL">
        <provider> org.hibernate.jpa.HibernatePersistenceProvider </provider>
        <class> org.rivera.hibernateapp.entity.Cliente </class>
        <class> org.rivera.hibernateapp.entity.Factura </class>
        <class> org.rivera.hibernateapp.entity.Direccion </class>
        <class> org.rivera.hibernateapp.entity.ClienteDetalle </class>
        <class>org.rivera.hibernateapp.entity.Curso</class>
        <class>org.rivera.hibernateapp.entity.Alumno</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/java_curso_hibernate?serverTimezone=GMT-5" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="sasa" />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>
    </persistence-unit>
</persistence>